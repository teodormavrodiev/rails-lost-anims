<p id="notice"><%= notice %></p>

<h1>Lost Animals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Owner email</th>
      <th>Description</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lost_animals.each do |lost_animal| %>
      <tr>
        <td><%= lost_animal.name %></td>
        <td><%= lost_animal.owner %></td>
        <td><%= lost_animal.owner_email %></td>
        <td><%= lost_animal.description %></td>
        <td><%= lost_animal.city %></td>
        <td><%= link_to 'Show', lost_animal %></td>
        <td><%= link_to 'Edit', edit_lost_animal_path(lost_animal) %></td>
        <td><%= link_to 'Destroy', lost_animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lost Animal', new_lost_animal_path %>
