<%= simple_form_for(@lost_animal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :owner %>
    <%= f.input :owner_email %>
    <%= f.input :description %>
    <%= f.association :city %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
