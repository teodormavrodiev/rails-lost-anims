<%= simple_form_for [@city, @lost_animal] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :owner %>
    <%= f.input :owner_email %>
    <%= f.input :description %>
    <%= f.input :photos, as: :attachinary %>
  </div>

  <div class="form-actions text-center margin-bottom">
    <%= f.button :submit %>
  </div>
<% end %>
