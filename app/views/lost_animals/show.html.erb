<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @lost_animal.name %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @lost_animal.owner %>
</p>

<p>
  <strong>Owner email:</strong>
  <%= @lost_animal.owner_email %>
</p>

<p>
  <strong>Description:</strong>
  <%= @lost_animal.description %>
</p>

<% @lost_animal.photos.each do |photo| %>
  <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
<% end %>

<%= render 'comment_form', city: @city, lost_animal: @lost_animal, comment: @comment %>

<% @lost_animal.comments.order(id: :desc).each do |comment| %>
  <p> <%= comment.description  %> </p>
<% end %>


<%= link_to 'Back', @lost_animal.city %>
